{
  "scripts": {
    "start": "cross-env NODE_ENV=development concurrently tailwind serve",
    "tailwind": "tailwindcss -i ./src/app.css -c ./tailwind.config.js -o public/build/tailwind.css --watch",
    "serve": "live-server ./public",
    "build:dev": "cross-env NODE_ENV=development tailwindcss -i ./src/app.css -o public/build/tailwind.css",
    "build": "cross-env NODE_ENV=production tailwindcss -i ./src/app.css -o public/build/tailwind.css"
  },
  "dependencies": {
    "autoprefixer": "^10.2.6",
    "postcss": "^8.3.2",
    "tailwindcss": "^2.2.4"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.6",
    "live-server": "^1.2.1",
    "postcss-cli": "^8.3.1"
  }
}

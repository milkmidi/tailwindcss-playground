{
  "scripts": {
    "serve": "cross-env NODE_ENV=development concurrently \"postcss public/tailwind.css -o public/build/tailwind.css --watch\"  \"live-server ./public\"",
    "start": "npm run serve",
    "build:dev": "cross-env NODE_ENV=development postcss public/tailwind.css -o public/build/tailwind.css",
    "build": "cross-env NODE_ENV=production postcss public/tailwind.css -o public/build/tailwind.css"
  },
  "dependencies": {
    "autoprefixer": "^10.2.6",
    "postcss": "^8.3.2",
    "tailwindcss": "^2.2.4"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.6",
    "live-server": "^1.2.1",
    "postcss-cli": "^8.3.1"
  }
}
